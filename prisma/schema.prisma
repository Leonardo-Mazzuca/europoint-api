generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int    @id @default(autoincrement())
  email        String @unique
  username     String
  phone_number String
  password     String

  area    Area @relation(fields: [area_id], references: [id])
  area_id Int

  saved_posts_ids      Int[]
  saved_newsletter_ids Int[]
  saved_projects_ids   Int[]
  achieviments         Achieviment[]
  avatar               String?       @default("")
  posts                Post[]
  followed_areas       Area[]        @relation("UserFollowsAreas")

  idea Idea []

  projects    Project[]
  newsletters NewsLetter[]

  total_points Int? @default(0)

  liked_newsletters NewsletterLike[]
  liked_posts PostLike[]

  login_count Int? @default(0)

  played_quiz_count Int? @default(0)

  show_splash_again Boolean? @default(true)

  quiz_result QuizResult[]
  running_quizzes RunningQuiz[]
}

model Area {
  id            Int    @id @default(autoincrement())
  name          String
  contact_email String

  users       User[]
  posts       Post[]
  projects    Project[]
  newsletters NewsLetter[]
  teams       Team[]
  followers   User[]       @relation("UserFollowsAreas")

}

model Post {
  id          Int      @id @default(autoincrement())
  content     String
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  area_id     Int
  area        Area     @relation(fields: [area_id], references: [id])
  total_likes Int?     @default(0)
  likes PostLike []
  total_views Int?     @default(0)
  images      PostImage[]
  created_at  DateTime @default(now())
  total_saved Int?     @default(0)
  is_demo Boolean? @default(false)
}

model PostLike {
  id      Int      @id @default(autoincrement())
  post_id Int
  user_id Int
  post    Post     @relation(fields: [post_id], references: [id])
  user    User     @relation(fields: [user_id], references: [id])
  @@unique([user_id, post_id]) 
}

model PostImage {
  id      Int      @id @default(autoincrement())
  post_id Int
  post    Post     @relation(fields: [post_id], references: [id])
  path   String
}

enum ProjectStatus {
  RUNNING
  FINISHED
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  content     String
  image       ProjectImage[]
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  team_id     Int
  team        Team     @relation(fields: [team_id], references: [id])
  members_ids Int[]
  area        Area     @relation(fields: [area_id], references: [id])
  area_id     Int
  created_at  DateTime @default(now())
  total_saved Int? @default(0)
  status  ProjectStatus? @default(RUNNING)
  is_demo Boolean? @default(false)
}

model ProjectImage {
  id      Int      @id @default(autoincrement())
  project_id Int
  project    Project     @relation(fields: [project_id], references: [id])
  path   String
}

model NewsLetter {
  id          Int      @id @default(autoincrement())
  total_likes Int?     @default(0) 
  likes       NewsletterLike[]
  total_views Int?     @default(0)
  images      NewsletterImage[]
  content     String
  area_id     Int
  area        Area     @relation(fields: [area_id], references: [id])
  user        User     @relation(fields: [user_id], references: [id])
  user_id     Int
  title       String
  created_at  DateTime @default(now())
  total_saved Int? @default(0)
  is_demo Boolean? @default(false)
}

model NewsletterLike {
  id            Int         @id @default(autoincrement())
  user_id       Int
  newsletter_id Int
  newsletter    NewsLetter  @relation(fields: [newsletter_id], references: [id])
  user          User        @relation(fields: [user_id], references: [id])

  @@unique([user_id, newsletter_id]) 
}

model NewsletterImage {
  id      Int      @id @default(autoincrement())
  newsletter_id Int
  newsletter    NewsLetter     @relation(fields: [newsletter_id], references: [id])
  path   String
}

model Team {
  id          Int       @id @default(autoincrement())
  name        String
  members_ids Int[]
  area        Area      @relation(fields: [area_id], references: [id])
  area_id     Int
  projects    Project[]
}

model Program {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  image       String? @default("")
}

model Quiz {
  id           Int        @id @default(autoincrement())
  title        String
  description  String
  questions    Question[]
  image        String? @default("")
  duration     String
  is_running   Boolean? @default(false)
  created_at   DateTime @default(now())
  updated_at   DateTime @default(now())
  total_answered Int? @default(0)
  current_question_index Int? @default(0)
  quiz_results QuizResult[]
  running_quiz RunningQuiz[]
}

model QuizResult {
  id        Int      @id @default(autoincrement())
  quiz_id   Int
  quiz      Quiz     @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  user_id   Int
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  total_points Int
  total_right_answers Int
}

model RunningQuiz {
  id        Int      @id @default(autoincrement())
  quiz_id   Int
  quiz      Quiz     @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  user_id   Int
  user      User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
  current_points Int
  total_right_answers Int
  current_answer Int? @default(0)
}

model Question {
  id             Int              @id @default(autoincrement())
  title          String
  correct_answer String
  quiz_id        Int
  quiz           Quiz             @relation(fields: [quiz_id], references: [id], onDelete: Cascade)
  options        QuestionOption[]
  total_points   Int @default(0)
  is_answered    Boolean? @default(false)
}

model QuestionOption {
  id          Int      @id @default(autoincrement())
  title       String
  answer      String
  question_id Int
  question    Question @relation(fields: [question_id], references: [id], onDelete: Cascade)
}

enum AchievimentKey {
  //done
  FIRST_LOGIN
  //
  NO_ERRORS
  MISS_ONE
  //done
  REGISTERED_POST
  REGISTERED_10_POST
  REGISTERED_30_POST
  //
  EDIT_PROFILE
  //done
  PLAYED_QUIZ
  PLAYED_QUIZ_5
  PLAYED_QUIZ_15
  //
  READ_PROGRAM
  READ_5_PROGRAM
  READ_15_PROGRAM
  ASKED_BOT
  //done
  LOGGED_10_TIMES_IN_ROW
  LOGGED_50_TIMES_IN_ROW
  LOGGED_100_TIMES_IN_ROW
  //
}

model Achieviment {
  id          Int      @id @default(autoincrement())
  title       String
  progress    Int?     @default(0)
  description String
  points      Int
  user_id     Int
  user        User     @relation(fields: [user_id], references: [id])
  completed   Boolean? @default(false)
  key         AchievimentKey?
  @@unique([user_id, key])
  updated_at  DateTime @default(now())
}

model Idea {
  id Int @id @default(autoincrement())
  title String
  description String
  user User @relation(fields: [user_id], references: [id])
  user_id Int
  created_at DateTime @default(now())
}